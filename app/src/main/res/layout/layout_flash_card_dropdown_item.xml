<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="android.view.View" />

        <variable
            name="viewmodel"
            type="co.idearun.learningapp.feature.viewmodel.UIViewModel" />

        <variable
            name="listener"
            type="co.idearun.learningapp.feature.lesson.listener.FieldsListener" />

        <variable
            name="field"
            type="co.idearun.learningapp.data.model.form.Fields" />
        <variable
            name="form"
            type="co.idearun.learningapp.data.model.form.Form" />

        <variable
            name="baseMethod"
            type="co.idearun.learningapp.common.BaseMethod" />
    </data>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/padding_small">

        <include
            android:id="@+id/field_ui_header"
            layout="@layout/layout_ui_field_header" />

        <RelativeLayout
            android:id="@+id/spinner_value_lay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/field_ui_header"
            android:minHeight="@dimen/btn_h_l"
            android:padding="@dimen/padding_xsmall"
            android:visibility="visible"
            app:field_has_err="@{viewmodel.errorField.slug.equals(field.slug)}"
            app:field_background="@{form}">

            <androidx.appcompat.widget.AppCompatSpinner
                android:id="@+id/value_spinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:backgroundTint="@color/colorBlack" />


        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/err_lay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/spinner_value_lay"
            android:visibility="@{viewmodel.errorField.slug.equals(field.slug)?View.VISIBLE:View.GONE,default=gone}">

            <include
                android:id="@+id/field_ui_footer"
                layout="@layout/layout_ui_field_footer" />
        </RelativeLayout>
    </RelativeLayout>
</layout>