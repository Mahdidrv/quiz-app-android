<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="form"
            type="co.idearun.learningapp.data.model.form.Form" />

        <variable
            name="flashcardListener"
            type="co.idearun.learningapp.feature.lesson.listener.LessonListener" />

        <variable
            name="viewmodel"
            type="co.idearun.learningapp.feature.viewmodel.UIViewModel" />

        <variable
            name="listener"
            type="co.idearun.learningapp.feature.lesson.listener.FieldsListener" />

    </data>

    <RelativeLayout
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/cong_imv"
            android:layout_width="@dimen/img_size_l"
            android:layout_height="@dimen/img_size_l"
            android:layout_centerHorizontal="true"
            app:lottie_autoPlay="true"
            android:layout_marginBottom="@dimen/padding_xlarge"
            app:lottie_loop="true"
            app:lottie_rawRes="@raw/happiness" />

        <org.sufficientlysecure.htmltextview.HtmlTextView
            android:id="@+id/contxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/cong_imv"
            android:layout_centerHorizontal="true"
            android:layout_margin="@dimen/padding_standard"
            android:layout_marginBottom="@dimen/padding_standard"
            app:htmlTxt="@{form.success_message}"
            android:textAlignment="center"
            text_color="@{form.text_color}"
            android:textSize="@dimen/font_2xlarge" />

    </RelativeLayout>
</layout>