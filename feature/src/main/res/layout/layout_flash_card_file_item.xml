<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="android.view.View" />

        <variable
            name="viewmodel"
            type="co.idearun.feature.viewmodel.UIViewModel" />

        <variable
            name="listener"
            type="co.idearun.feature.lesson.listener.FieldsListener" />

        <variable
            name="field"
            type="co.idearun.data.model.form.Fields" />
        <variable
            name="form"
            type="co.idearun.data.model.form.Form" />

        <variable
            name="baseMethod"
            type="co.idearun.common.BaseMethod" />

    </data>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/padding_small">

        <include
            android:id="@+id/field_ui_header"
            layout="@layout/layout_ui_field_header" />

        <RelativeLayout
            android:id="@+id/err_lay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/file_btn"
            android:visibility="@{viewmodel.errorField.slug.equals(field.slug)?View.VISIBLE:View.GONE,default=gone}">

            <include
                android:id="@+id/field_ui_footer"
                layout="@layout/layout_ui_field_footer" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/file_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/field_ui_header"
            android:minHeight="@dimen/btn_h_l"
            android:padding="@dimen/padding_xsmall"

            app:field_background="@{form}">

            <TextView
                android:id="@+id/key_txv"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_marginStart="@dimen/padding_small"
                android:text="@string/click_to_upload_file"
                android:textAlignment="viewStart"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/font_large"
                app:text_color="@{form.text_color}" />

            <TextView
                android:id="@+id/desc_txv"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/key_txv"
                android:layout_alignParentStart="true"
                android:layout_marginStart="@dimen/padding_small"
                android:layout_marginTop="@dimen/padding_xsmall"
                android:textAlignment="viewStart"
                android:textColor="@color/gray2"
                android:textSize="@dimen/font_xlarge"
                android:visibility="gone" />

            <TextView
                android:id="@+id/fiel_txv"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/desc_txv"
                android:layout_alignParentStart="true"
                android:layout_marginStart="@dimen/padding_small"
                android:layout_marginTop="@dimen/padding_xsmall"
                android:textAlignment="viewStart"
                android:text="@{viewmodel.fieldFielName.slug==field.slug?viewmodel.fieldFielName.title:@string/empty_txt,default=@string/empty_txt}"
                android:textColor="@color/gray2"
                android:textSize="@dimen/font_xlarge"
                android:visibility="gone" />

            <ImageButton
                android:id="@+id/remove_file_btn"
                android:layout_width="@dimen/icon_size_standard"
                android:layout_height="@dimen/icon_size_standard"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:onClick="@{()->viewmodel.removeFile(field.slug)}"
                android:visibility="gone"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:scaleType="centerInside"
                android:src="@drawable/ic_close" />

        </RelativeLayout>


    </RelativeLayout>
</layout>